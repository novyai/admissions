{
  "name": "@repo/db",
  "version": "1.0.0",
  "type": "module",
  "main": "src/client.ts",
  "module": "src/client.ts",
  "exports": {
    ".": {
      "import": "./src/client.ts",
      "require": "./src/client.ts"
    },
    "./queries/user": "./src/queries/user.ts",
    "./queries/conversation": "./src/queries/conversation.ts",
    "./data/*": "./src/data/*.json"
  },
  "scripts": {
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx src/seed.ts",
    "db:format": "prisma format",
    "db:generate": "prisma generate --no-engine",
    "db:dev": "docker compose -f ./admissions/docker-compose.yml up -d",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "eslint --max-warnings 0",
    "build": "prisma generate --no-engine",
    "predev": "bun run generate",
    "studio": "prisma studio",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@prisma/client": "5.12.1",
    "@prisma/extension-accelerate": "^1.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prisma": "^5.12.1",
    "rimraf": "^5.0.5"
  }
}
