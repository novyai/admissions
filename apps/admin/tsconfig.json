{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ui/*": [
        "../../packages/ui/src/*"
      ],
      "@db/*": [
        "../../packages/db/src/*"
      ],
      "@graph/*": [
        "../../packages/graph/src/*"
      ],
    },
    "baseUrl": ".",
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.js",
    "../../packages/ui/src/components/chat-scroll-anchor.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}